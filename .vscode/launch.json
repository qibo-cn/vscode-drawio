{
	"version": "0.2.0",
	"configurations": [
		{
            "name": "Extension debug",
            "type": "extensionHost",
            "request": "launch",
            "runtimeExecutable": "${execPath}",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ]
        },
		{
			"name": "Launch Drawio To Debug Plugins",
			"request": "launch",
			"type": "pwa-chrome",
			"url": "https://app.diagrams.net/",
			"webRoot": "${workspaceFolder}/drawio-custom-plugins/src"
		},
		{
			"name": "Extension (dev)",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extension=hediet.vscode-drawio-insiders-build",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--enable-proposed-api hediet.vscode-drawio",
				"${workspaceFolder}/examples"
			],
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"preLaunchTask": "npm: dev",
			"env": {
				"DEV": "1"
			}
		},
		{
			"name": "Extension (dev) 2",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extension=hediet.vscode-drawio-insiders-build",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--enable-proposed-api hediet.vscode-drawio",
				"${workspaceFolder}/docs"
			],
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"preLaunchTask": "npm: dev",
			"env": {
				"DEV": "1"
			}
		},
		{
			"name": "Extension",
			"type": "extensionHost",
			"request": "launch",
			"runtimeExecutable": "${execPath}",
			"args": [
				"--disable-extensions",
				"--extensionDevelopmentPath=${workspaceFolder}",
				"--enable-proposed-api hediet.vscode-drawio",
				"${workspaceFolder}/examples"
			],
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
			"preLaunchTask": "npm: dev"
		}
	]
}
